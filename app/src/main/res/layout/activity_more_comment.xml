<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>
    <include layout="@layout/top"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/head"

            android:layout_marginTop="14dp"
            android:layout_marginStart="17dp"
            android:id="@+id/ivHead"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名"
            android:layout_toEndOf="@+id/ivHead"
            android:layout_marginStart="7dp"
            android:layout_marginTop="27dp"
            android:textSize="16dp"
            android:textColor="#333333"
            android:id="@+id/tvUsername"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-1-1"
            android:id="@+id/tvTime"
            android:layout_toEndOf="@+id/ivHead"
            android:layout_marginStart="7dp"
            android:layout_marginTop="47dp"
            android:textSize="12dp"
            android:textColor="#BFBFBF"
            />
        <TextView
            android:layout_width="329dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTime"
            android:id="@+id/tvContent"
            android:textSize="14dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="6dp"
            />
        <RelativeLayout
            android:layout_width="329dp"
            android:layout_height="51dp"
            android:layout_marginStart="17dp"
            android:layout_below="@+id/tvContent"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="12dp"
            android:id="@+id/rvBook"
            android:background="#eeeeee"
            >

            <ImageView
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:src="@mipmap/cover"
                android:id="@+id/ivCover"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="书名"
                android:id="@+id/tvBookname"
                android:layout_toEndOf="@+id/ivCover"
                android:layout_marginTop="7dp"
                android:layout_marginStart="9dp"
                android:textSize="11dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="作者"
                android:id="@+id/tvAuthor"
                android:layout_below="@+id/tvBookname"
                android:layout_toEndOf="@+id/ivCover"
                android:layout_marginTop="5dp"
                android:layout_marginStart="9dp"
                android:textSize="11dp"
                />
        </RelativeLayout>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EEEEEE"
        android:layout_weight="1.05"></android.support.v7.widget.RecyclerView>
    <include layout="@layout/sendmessage" />
</LinearLayout>
