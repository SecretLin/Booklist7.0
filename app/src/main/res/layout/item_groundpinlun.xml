<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivHead"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="14dp"
        android:src="@mipmap/head"

        />
    <TextView
        android:id="@+id/pName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="sss"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@+id/ivHead"
        android:layout_marginStart="9dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTime"
        android:layout_toEndOf="@+id/ivHead"
        android:layout_below="@+id/pName"
        android:layout_marginStart="8dp"
        android:textSize="12dp"
        android:text="2017-1-1"
        />
    <TextView
        android:id="@+id/tvhuifu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_toEndOf="@+id/pName"
        android:layout_marginStart="14dp"
        android:text="回复"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/pName1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="888"
        android:textColor="#269DBF"
        android:visibility="gone"
        android:layout_toEndOf="@id/tvhuifu"
        android:layout_marginTop="16dp"
        android:layout_marginStart="14dp"
     />
    <TextView
        android:id="@+id/tv_content"
        android:layout_below="@+id/ivHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_toEndOf="@+id/ivHead"
        android:text="555"
        android:textSize="14dp"/>
</RelativeLayout>