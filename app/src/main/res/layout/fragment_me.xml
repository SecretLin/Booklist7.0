<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="#5CAB7D"
            android:id="@+id/relativeLayout"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">


            <de.hdodenhof.circleimageview.CircleImageView
                android:paddingTop="14dp"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:src="#ffffff"
                android:id="@+id/imTouxiang_Me"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="14dp"
                android:paddingTop="8dp"
                android:paddingBottom="9dp"
                android:id="@+id/etUsername_Me"
                android:visibility="gone"
                android:singleLine="true"
                android:textCursorDrawable="@null"
                android:imeOptions="actionDone"
                android:layout_below="@+id/imTouxiang_Me"
                android:layout_alignEnd="@+id/imTouxiang_Me"
                android:layout_alignStart="@+id/imTouxiang_Me" />


            <ImageButton
                android:background="@mipmap/pen"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:id="@+id/btnModifyName"
                android:layout_marginTop="13dp"
                android:layout_below="@+id/imTouxiang_Me"
                android:layout_toEndOf="@+id/tvUsername_Me"
                android:layout_marginStart="5dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hh"
                android:layout_centerHorizontal="true"
                android:textColor="#ffffff"
                android:textSize="14dp"
                android:paddingTop="8dp"
                android:paddingBottom="9dp"
                android:id="@+id/tvUsername_Me"
                android:layout_below="@+id/imTouxiang_Me"
                android:layout_marginTop="5dp"
                />



        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:orientation="horizontal"
            android:weightSum="3"
            android:background="#71B68E"
            android:id="@+id/Relativelayoutsum"
            android:layout_below="@+id/relativeLayout"
            android:layout_alignParentStart="true">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:id="@+id/layout_Guangzhu"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:text="0"
                    android:id="@+id/tvFollower_count"
                    android:textSize="20dp"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:paddingBottom="1dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="关注"
                    android:textSize="13dp"
                    android:textColor="#dedddd"
                    android:gravity="center"

                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:id="@+id/layout_Fans"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:text="0"
                    android:id="@+id/tvFans_count"
                    android:textSize="20dp"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:paddingBottom="1dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="粉丝"
                    android:textSize="13dp"
                    android:textColor="#dedddd"
                    android:gravity="center"

                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:id="@+id/layout_Shoucang"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:text="0"
                    android:id="@+id/shoucang_count"
                    android:textSize="20dp"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:paddingBottom="1dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="书单"
                    android:textSize="13dp"
                    android:textColor="#dedddd"
                    android:gravity="center"

                    />
            </LinearLayout>


        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:background="#ffffff"
            android:id="@+id/rlMore"
            android:layout_below="@+id/Relativelayoutsum"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="历史记录"
                android:textStyle="bold"
                android:id="@+id/tvHistory"
                android:textSize="17dp"
                android:textColor="#333333"
                android:paddingTop="12dp"
                android:paddingLeft="18dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="还没看过书呢，快去看看吧！"
                android:layout_below="@+id/tvHistory"
                android:textSize="14dp"
                android:id="@+id/tvHistory_null"
                />
            <ImageView
                android:layout_width="90dp"
                android:layout_height="92dp"
                android:src="@mipmap/cover"
                android:id="@+id/ivCover1"
                android:layout_marginTop="42dp"
                android:visibility="gone"
                android:layout_marginLeft="8dp"
                />
            <ImageView
                android:layout_width="90dp"
                android:layout_height="92dp"
                android:src="@mipmap/cover"
                android:id="@+id/ivCover2"
                android:layout_marginTop="42dp"
                android:visibility="gone"

                android:layout_marginLeft="91dp"
                />
            <ImageView
                android:layout_width="90dp"
                android:layout_height="92dp"
                android:src="@mipmap/cover"
                android:id="@+id/ivCover3"
                android:layout_marginTop="42dp"
                android:visibility="gone"

                android:layout_marginLeft="174dp"
                />


            <ImageButton
                android:text="更多"
                android:background="@mipmap/btnmore"
                android:layout_width="58dp"
                android:layout_height="29dp"
                android:id="@+id/btnMore"
                android:visibility="gone"

                android:layout_alignBottom="@+id/ivCover3"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="28dp"
                android:layout_marginBottom="29dp" />


        </RelativeLayout>

        <ImageButton
            android:background="@mipmap/myinter"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:id="@+id/btnMyInter"
            android:layout_below="@+id/rlMore"
            />
        <ImageButton
            android:background="@mipmap/myprivate"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:id="@+id/btnMyPrivateConversation"
            android:layout_below="@+id/btnMyInter"
            />
        <ImageButton
            android:background="@mipmap/setting"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:id="@+id/btnSetting"
            android:layout_below="@+id/btnMyPrivateConversation"
            />
        <ImageButton
            android:background="@mipmap/feedback"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:id="@+id/btnFeedback"
            android:layout_below="@+id/btnSetting"
            />
        <ImageButton
            android:background="@mipmap/about_us"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:id="@+id/btnAboutUs"
            android:layout_below="@+id/btnFeedback"
            />

    </RelativeLayout>
</ScrollView>