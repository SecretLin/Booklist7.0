<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"

    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#5CAB7D"
        android:id="@+id/relativeLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:src="#ffffff"
            android:id="@+id/imTouxiang_Me"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
             />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="14dp"
            android:visibility="gone"
            android:id="@+id/etUsername_Me"
            android:singleLine="true"
            android:text="hh"
            android:textCursorDrawable="@null"
            android:imeOptions="actionDone"
            android:layout_marginTop="9dp"
            android:layout_toEndOf="@+id/imTouxiang_Me"
            android:layout_marginStart="13dp" />


        <ImageButton
            android:background="@mipmap/pen"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:id="@+id/btnModifyName"
            android:layout_toEndOf="@+id/tvUsername_Me"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hh"
            android:textColor="#ffffff"
            android:textSize="14dp"
            android:id="@+id/tvUsername_Me"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/imTouxiang_Me"
            android:layout_marginStart="17dp"
            />






        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:id="@+id/layout_Guangzhu"
            android:layout_toEndOf="@+id/imTouxiang_Me"
            android:layout_marginStart="15dp"
            android:layout_marginTop="40dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="0"
                android:id="@+id/tvFollower_count"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:paddingBottom="1dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="关注"
                android:textSize="13dp"
                android:textColor="#dedddd"
                android:gravity="center"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:id="@+id/layout_Fans"
            android:layout_marginTop="40dp"
            android:layout_toEndOf="@+id/layout_Guangzhu"
            android:layout_marginStart="40dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="0"
                android:id="@+id/tvFans_count"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:paddingBottom="1dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="粉丝"
                android:textSize="13dp"
                android:textColor="#dedddd"
                android:gravity="center"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:id="@+id/layout_Shoucang"
            android:layout_marginTop="40dp"
            android:layout_toEndOf="@+id/layout_Fans"
            android:layout_marginStart="40dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="0"
                android:id="@+id/shoucang_count"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:paddingBottom="1dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="收藏"
                android:textSize="13dp"
                android:textColor="#dedddd"
                android:gravity="center"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:id="@+id/layout_book"
            android:layout_marginTop="40dp"
            android:layout_toEndOf="@+id/layout_Shoucang"
            android:layout_marginStart="40dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="0"
                android:id="@+id/book_count"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:paddingBottom="1dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="书单"
                android:textSize="13dp"
                android:textColor="#dedddd"
                android:gravity="center"

                />
        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:background="#ffffff"
        android:id="@+id/rlMore"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="历史记录"
            android:textStyle="bold"
            android:id="@+id/tvHistory"
            android:textSize="17dp"
            android:textColor="#333333"
            android:paddingTop="12dp"
            android:paddingLeft="18dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="还没看过书呢，快去看看吧！"
            android:layout_below="@+id/tvHistory"
            android:textSize="14dp"
            android:id="@+id/tvHistory_null"
            />
        <ImageView
            android:layout_width="90dp"
            android:layout_height="92dp"
            android:src="@mipmap/cover"
            android:id="@+id/ivCover1"
            android:layout_marginTop="42dp"
            android:visibility="gone"
            android:layout_marginLeft="8dp"
            />
        <ImageView
            android:layout_width="90dp"
            android:layout_height="92dp"
            android:src="@mipmap/cover"
            android:id="@+id/ivCover2"
            android:layout_marginTop="42dp"
            android:visibility="gone"

            android:layout_marginLeft="91dp"
            />
        <ImageView
            android:layout_width="90dp"
            android:layout_height="92dp"
            android:src="@mipmap/cover"
            android:id="@+id/ivCover3"
            android:layout_marginTop="42dp"
            android:visibility="gone"

            android:layout_marginLeft="174dp"
            />


        <ImageButton
            android:text="更多"
            android:background="@mipmap/btnmore"
            android:layout_width="58dp"
            android:layout_height="29dp"
            android:id="@+id/btnMore"
            android:visibility="gone"

            android:layout_alignBottom="@+id/ivCover3"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="28dp"
            android:layout_marginBottom="29dp" />


    </RelativeLayout>

    <ImageButton
        android:background="@mipmap/myinter"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:id="@+id/btnMyInter"
        android:layout_below="@+id/rlMore"
         />
    <ImageButton
        android:background="@mipmap/myprivate"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:id="@+id/btnMyPrivateConversation"
        android:layout_below="@+id/btnMyInter"
        />
    <ImageButton
        android:background="@mipmap/setting"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:id="@+id/btnSetting"
        android:layout_below="@+id/btnMyPrivateConversation"
        />
    <ImageButton
        android:background="@mipmap/feedback"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:id="@+id/btnFeedback"
        android:layout_below="@+id/btnSetting"
        />
    <ImageButton
       android:background="@mipmap/about_us"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:id="@+id/btnAboutUs"
        android:layout_below="@+id/btnFeedback"
        />

</RelativeLayout>
</ScrollView>
