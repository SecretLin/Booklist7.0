        />

    <ImageButton
        android:text="发送"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="324dp"
        android:visibility="visible"
        android:background="@mipmap/send"
        android:id="@+id/btnSendMessage"
        />
</RelativeLayout>